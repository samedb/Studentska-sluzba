<Page x:ConnectionId='1'
    x:Class="Studentska_služba.Views.StatistikaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studentska_služba.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="NaslovGrafikona" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5, 35, 5, 0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Statistički podaci"
                   FontSize="48"
                   Margin="10"
                   HorizontalAlignment="Center"/>
        
        <ScrollViewer Grid.Row="1">

            <StackPanel>


                <TextBlock Text="Uspesnost polaganja ispita po ispitnim rokovima"
                           Style="{StaticResource NaslovGrafikona}"/>
                <charting:Chart HorizontalAlignment="Stretch" 
                                Margin="50, 0"
                                Height="400">
                    <charting:ColumnSeries x:ConnectionId='6' Title="Broj prijavljenih ispita" 
                                           IndependentValuePath="Name" 
                                           DependentValuePath="Amount"
                                           IsSelectionEnabled="True"
                                                                                                             />

                    <charting:ColumnSeries x:ConnectionId='7' Title="Broj polozenih ispita" 
                                           IndependentValuePath="Name" 
                                           DependentValuePath="Amount"
                                           IsSelectionEnabled="True"
                                                                                                          />
                </charting:Chart>


                <TextBlock Text="Broj studenata po departmanima"
                           Style="{StaticResource NaslovGrafikona}"/>
                <charting:Chart HorizontalAlignment="Center" 
                                Margin="0" 
                                Width="600"
                                Height="400">
                    <charting:PieSeries x:ConnectionId='5' Title=""
                                        IndependentValuePath="Name"  
                                        DependentValuePath="Amount"  
                                        IsSelectionEnabled="True"
                                                                                                          />
                </charting:Chart>


                <!--<TextBlock Text="Uspesnost polaganja predmeta"
                           Style="{StaticResource NaslovGrafikona}"/>
                <charting:Chart HorizontalAlignment="Center" 
                                Margin="0" 
                                Width="600"
                                Height="400">
                    <charting:BarSeries Title=""
                                        IndependentValuePath="Name"  
                                        DependentValuePath="Amount"  
                                        IsSelectionEnabled="True"
                                        ItemsSource="{x:Bind vm.UspesnostPolaganjePredmeta}"/>
                </charting:Chart>-->


                <TextBlock Text="Prosecna ocena po predmetu"
                           Style="{StaticResource NaslovGrafikona}"/>
                <charting:Chart HorizontalAlignment="Center" 
                                Margin="0"
                                Height="600"
                                Width="600">
                    <charting:BarSeries x:ConnectionId='4'  Title=""
                                         IndependentValuePath="Name"  
                                         DependentValuePath="Amount" CharacterSpacing="5"  
                                         IsSelectionEnabled="True"
                                                                                                       />
                </charting:Chart>


                <TextBlock Text="Prosecna ocena po departmanu"
                           Style="{StaticResource NaslovGrafikona}"/>
                <charting:Chart HorizontalAlignment="Center" 
                                Margin="0" 
                                Width="600"
                                Height="400">
                    <charting:BarSeries x:ConnectionId='3' Title=""
                                        IndependentValuePath="Name"  
                                        DependentValuePath="Amount" CharacterSpacing="5"  
                                        IsSelectionEnabled="True"
                                                                                                        />
                </charting:Chart>


                <TextBlock Text="Najbolji studenti"
                           Style="{StaticResource NaslovGrafikona}"/>
                <charting:Chart HorizontalAlignment="Center" 
                                Margin="0" 
                                Width="600"
                                Height="400">
                    <charting:BarSeries x:ConnectionId='2' Title=""
                                        IndependentValuePath="Name"  
                                        DependentValuePath="Amount" CharacterSpacing="5"  
                                        IsSelectionEnabled="True"
                                                                                               />
                </charting:Chart>


            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

