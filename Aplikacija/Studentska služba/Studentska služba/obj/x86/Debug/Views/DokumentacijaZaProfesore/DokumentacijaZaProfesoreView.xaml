<Page x:ConnectionId='1'
    x:Class="Studentska_služba.Views.DokumentacijaZaProfesoreView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studentska_služba.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="DetailsElement" TargetType="Control">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="400"/>
        </Style>
    </Page.Resources>

    <StackPanel Margin="20" HorizontalAlignment="Center">
        <ComboBox x:ConnectionId='2' Header="Predmet"
                                                                 
                  DisplayMemberPath="Naziv"
                                                                                           
                  Style="{StaticResource DetailsElement}"/>
        <ComboBox x:ConnectionId='3' Header="Naziv roka"
                                                               
                                                                                     
                  Style="{StaticResource DetailsElement}"/>
        <ComboBox x:ConnectionId='4' Header="Godina"
                                                               
                                                                                  
                  Style="{StaticResource DetailsElement}"/>
        <Button x:ConnectionId='5' Content="Štampaj"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="20"
                Padding="20"
                FontSize="24"
                                                             />
    </StackPanel>
</Page>

