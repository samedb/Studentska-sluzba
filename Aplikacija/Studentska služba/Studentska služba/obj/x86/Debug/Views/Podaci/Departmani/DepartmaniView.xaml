<Page x:ConnectionId='1'
    x:Class="Studentska_služba.Views.Podaci.DepartmaniView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studentska_služba.Views.Podaci.Departmani"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:podaci="using:Studentska_služba.Views.Podaci"
    xmlns:local1="using:Studentska_služba"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>

        <local1:DetailsModeToVisibilityConverter x:Key="DetailsButtonVisibilityConverter"/>
        <local1:DetailsModeToBoolean x:Key="DetailsModeToBooleanConverter"/>
        <local1:ObjectToVisibility x:Key="ObjectToVisibilityConverter"/>

    </Page.Resources>

    <Grid x:ConnectionId='2' Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Right">
            <podaci:CommandLine x:ConnectionId='9' 
                                                                         
                                                                         
                                                                         
                                                                             
                                                                              />

        </Grid>


        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:DepartmanList x:ConnectionId='3'                              />


            <StackPanel x:ConnectionId='4' Margin="10"
                    Background="WhiteSmoke"
                    Grid.Column="1"
                                                                                                                              >

                <local:DepartmanDetails x:ConnectionId='5'                                                  
                                                                                                                                                           />

                <StackPanel x:ConnectionId='6' Orientation="Horizontal"
                                                                                                                                          
                            HorizontalAlignment="Center">

                    <Button x:ConnectionId='7' Content="Save" 
                                                                                  
                            Margin="10"/>

                    <Button x:ConnectionId='8' Content="Cancel" 
                                                                            
                            Margin="10"/>

                </StackPanel>

            </StackPanel>
        </Grid>

    </Grid>
</Page>

