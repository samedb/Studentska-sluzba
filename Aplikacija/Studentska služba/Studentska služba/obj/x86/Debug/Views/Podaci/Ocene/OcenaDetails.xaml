<UserControl x:ConnectionId='1'
    x:Class="Studentska_služba.Views.Podaci.Ocene.OcenaDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Studentska_služba.Views.Podaci.Ocene"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>

        <Style x:Key="DetailsElement" TargetType="Control">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="300"/>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBlock Text="Ovo je propalo, mora bolje da se uradi"
                   FontSize="24"
                   TextWrapping="WrapWholeWords"
                   HorizontalAlignment="Center"/>

        <controls:WrapPanel Margin="2"
                            HorizontalAlignment="Center"
                            VerticalSpacing="10" 
                            HorizontalSpacing="10"
                            Orientation="Horizontal">
            <ComboBox x:ConnectionId='2'                                           
                          HorizontalAlignment="Stretch"
                          DisplayMemberPath="IdIspita"
                          SelectedValuePath="IdIspita"
                          Header="ID ispita"
                                                                                                
                          Style="{StaticResource DetailsElement}"/>

            <TextBox x:ConnectionId='3'                                                                                 
                     Header="Predmet"
                     Width="150"
                     Margin="10"/>

            <TextBox x:ConnectionId='4'                                                                                                  
                     Header="Student"
                     Width="150"
                     Margin="10"/>

            <TextBox x:ConnectionId='5'                                                                
                     Header="Ispitni rok"
                     Width="150"
                     Margin="10"/>
            
            <TextBox x:ConnectionId='6'                                                             
                     Header="Godina"
                     Width="150"
                     Margin="10"/>
            <TextBox x:ConnectionId='7'                                                             
                         Header="Ocena"
                         Style="{StaticResource DetailsElement}" />
        </controls:WrapPanel>

    </StackPanel>
</UserControl>

